<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_rps"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_rps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_player_1"
        android:layout_width="125dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_rps"
        tools:ignore="MissingConstraints">

    <FrameLayout
        android:id="@+id/fl_rock_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_kgb">

        <ImageView
            android:id="@+id/iv_rock_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/img_rock" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_paper_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_paper_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/img_paper" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_scissors_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/img_kgb">

        <ImageView
            android:id="@+id/iv_scissors_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/img_scissors" />
    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_player_2"
        android:layout_width="125dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rps"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:id="@+id/fl_rock_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_kgb">

            <ImageView
                android:id="@+id/iv_rock_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/img_rock" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_paper_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/iv_paper_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/img_paper" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_scissors_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_kgb">

            <ImageView
                android:id="@+id/iv_scissors_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/img_scissors" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_reset"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:src="@drawable/img_vs"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/ll_player_2"
        app:layout_constraintStart_toEndOf="@+id/ll_player_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_rps" />





</androidx.constraintlayout.widget.ConstraintLayout>